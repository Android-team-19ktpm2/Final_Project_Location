<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.SignUpActivity">

    <ImageButton
        android:id="@+id/signup_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/chat_btn_back"
        tools:ignore="MissingConstraints"></ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Sign Up"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color_blue"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_edt_first_name"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:background="@drawable/container_input"
                android:layout_marginTop="35dp"
                android:padding="8dp"
                android:textColorHint="#AFAFAF"
                android:textColor="#AFAFAF"
                android:textSize="16dp"
                android:hint="First name"></EditText>

            <EditText
                android:id="@+id/signup_edt_last_name"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:background="@drawable/container_input"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                android:padding="8dp"
                android:textColorHint="#AFAFAF"
                android:textColor="#AFAFAF"
                android:textSize="16dp"
                android:hint="Last name"></EditText>

        </LinearLayout>


        <EditText
            android:id="@+id/signup_edt_email"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/container_input"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textColorHint="#AFAFAF"
            android:textColor="#AFAFAF"
            android:hint="Email"
            android:textSize="16dp"
            android:inputType="textEmailAddress"></EditText>

        <EditText
            android:id="@+id/signup_edt_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/container_input"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textColorHint="#AFAFAF"
            android:textColor="#AFAFAF"
            android:hint="Password"
            android:textSize="16dp"
            android:inputType="textPassword"></EditText>

        <CheckBox
            android:id="@+id/signup_cb_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="I accept all terms and conditions"
            android:buttonTint="@color/pink"
            android:textColor="@color/pink"></CheckBox>

        <Button
            android:id="@+id/signup_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            android:text="Apply"
            android:background="@drawable/container_btn_gradient"></Button>


    </LinearLayout>


</LinearLayout>