<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color_blue"
        android:orientation="vertical"
        android:padding="15dp">


        <Button
            android:id="@+id/profile_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/chat_btn_back"
            tools:ignore="MissingConstraints"></Button>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp">
            </de.hdodenhof.circleimageview.CircleImageView>


                <LinearLayout
                    android:id="@+id/profile_form_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/profile_tv_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Nguyen Phan Vu"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto"
                            android:textSize="22dp"
                            android:textStyle="bold"></TextView>


                        <TextView
                            android:id="@+id/profile_tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="npv1510"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/roboto"
                            android:textSize="14dp"></TextView>

                </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_tv_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Friends"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/profile_tv_no_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textStyle="italic"
                android:textSize="14dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/profile_tv_no_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="family"
                android:textStyle="italic"
                android:textSize="14dp"></TextView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="General"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/profile_icon_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_cake">
                </ImageButton>


                <TextView
                    android:id="@+id/profile_tv_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_icon_cake"
                    android:layout_marginLeft="10dp"
                    android:text="15/10/2001"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <ImageButton
                    android:id="@+id/profile_icon_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_person">
                </ImageButton>


                <TextView
                    android:id="@+id/asd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_icon_male"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="italic"></TextView>

            </RelativeLayout>

        </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/profile_icon_mobile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_mobile_phone">
                </ImageButton>


                <TextView
                    android:id="@+id/profile_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_icon_mobile_phone"
                    android:text="0587756618"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <ImageButton
                    android:id="@+id/profile_icon_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mail">
                </ImageButton>


                <TextView
                    android:id="@+id/profile_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_icon_email"
                    android:text="19127633@outlook.com"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    tools:ignore="MissingConstraints"></TextView>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/profile_btn_update"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Update"
            android:background="@drawable/latest_button"></Button>

        <Button
            android:id="@+id/profile_btn_log_out"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/profile_btn_update"
            android:background="@drawable/btn_pink_gradient"
            android:text="Log out"></Button>

    </RelativeLayout>



</LinearLayout>