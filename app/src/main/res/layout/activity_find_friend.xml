<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindFriend"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/signup_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/chat_btn_back"
        tools:ignore="MissingConstraints"></ImageButton>

    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Friend Everywhere"
        android:textSize="30dp"
        android:textColor="@color/primary_text_1"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_margin="30dp"
        android:background="@drawable/shape_main_menu"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/searchImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_search_light_foreground">
        </ImageView>

        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:hint="Search">

        </AutoCompleteTextView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_text_2"
        ></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/primary_text_2"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/foundUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</LinearLayout>