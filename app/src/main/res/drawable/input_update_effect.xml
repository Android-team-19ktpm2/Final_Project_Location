<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_pink_blue"></solid>
            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/pink" android:width="3dp"></stroke>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#7BCEEE"></solid>
            <corners android:radius="8dp"></corners>
            <stroke android:color="@color/primary_color_blue" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>